<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUi_Inventory_Management.Winui_Activities.SignupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUi_Inventory_Management.Winui_Activities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="/Assets/signup_image.png"  Stretch="UniformToFill" 
                
                VerticalAlignment="Stretch"/>
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" >

                <TextBlock 
                    FontSize="{StaticResource SubtitleTextBlockFontSize}" 
                    FontWeight="SemiBold"    
                    HorizontalAlignment="Center" 
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Width="320">
    Create new account with Retail Rythm
                </TextBlock>

                <TextBox FontSize="{StaticResource BodyTextBlockFontSize}" Header="FullName" x:Name="FullName"
                        PlaceholderText="Neel Pandya" Width="320" Height="60" Margin="0,20,0,0"></TextBox>
                <TextBlock x:Name="NameError"
                    Foreground="Red"
                    FontSize="12"
                    Margin="0,5,0,0"
                    Visibility="Collapsed"
                    Text="Please enter a valid email." />
                <TextBox FontSize="{StaticResource BodyTextBlockFontSize}" Header="Email" x:Name="Email"  PlaceholderText="neelpandya2601@gmail.com" Margin="0,20,0,0" Width="320" Height="60"></TextBox>
                <TextBlock x:Name="EmailError"
                        Foreground="Red"
                        FontSize="12"
                        Margin="0,5,0,0"
                        Visibility="Collapsed"
                        Text="Please enter a valid email." />
                <PasswordBox FontSize="{StaticResource BodyTextBlockFontSize}" Header="Password" x:Name="Password" PlaceholderText="neel@123" Margin="0,20,0,0" Width="320" Height="60"></PasswordBox>
                <TextBlock x:Name="PasswordError"
                    Foreground="Red"
                    FontSize="12"
                    Margin="0,5,0,0"
                    Visibility="Collapsed"
                    Text="Please enter a valid email." />
                <PasswordBox FontSize="{StaticResource BodyTextBlockFontSize}" Header="ConfirmPassword" x:Name="ConfirmPassword" PlaceholderText="neel@123" Margin="0,20,0,0" Width="320" Height="60"></PasswordBox>
                <TextBlock x:Name="ConfirmPasswordError"
                    Foreground="Red"
                    FontSize="12"
                    Margin="0,5,0,0"
                    Visibility="Collapsed"
                    Text="Please enter a valid email." />
                <Button  Style="{StaticResource AccentButtonStyle}" Margin="0,20,0,0" HorizontalAlignment="Stretch" Click="Register">Create new account</Button>
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Margin="0,10,0,0" FontSize="{StaticResource BodyTextBlockFontSize}">Already Have An Account?</TextBlock>
                    <HyperlinkButton Grid.Column="1" Margin="0,10,0,0" Foreground="#60CDFF" FontSize="{StaticResource BodyTextBlockFontSize}" Padding="3,0,0,0" Click="HyperlinkButton_Click"> Sign in</HyperlinkButton>
                </Grid>

            </StackPanel>

        </Grid>
    </Grid>
</Page>
