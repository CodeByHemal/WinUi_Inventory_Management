<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUi_Inventory_Management.Winui_Activities.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUi_Inventory_Management.Winui_Activities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Border Width="120" Height="120"
            BorderBrush="Gray"
            BorderThickness="2"
            CornerRadius="60"
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
                <Image Source="/Assets/Splash_Logo.png"
                       Width="100" Height="100"
               Stretch="UniformToFill"
               />
            </Border>
            <TextBlock FontSize="{StaticResource SubtitleTextBlockFontSize}" FontWeight="SemiBold" Margin="0,20,0,0" HorizontalAlignment="center">Sign in to RetailRythm</TextBlock>

            <TextBox x:Name="EmailInput" FontSize="{StaticResource BodyTextBlockFontSize}" Header="Email" PlaceholderText="neelpandya2601@gmail.com" Width="320" Height="60" Margin="0,20,0,0"></TextBox>
            
            <TextBlock x:Name="EmailError"
           Foreground="Red"
           FontSize="12"
           Margin="0,5,0,0"
           Visibility="Collapsed"
           Text="Please enter a valid email." />
            
            <PasswordBox x:Name="PasswordInput" FontSize="{StaticResource BodyTextBlockFontSize}" Header="Password" PlaceholderText="neel@123" Margin="0,20,0,0" Width="320" Height="60"></PasswordBox>
            
            <TextBlock x:Name="PasswordError"
           Foreground="Red"
           FontSize="12"
           Margin="0,5,0,0"
           Visibility="Collapsed"
           Text="Password is required." />
            
            <Button  Style="{StaticResource AccentButtonStyle}" Margin="0,20,0,0" HorizontalAlignment="Stretch" Click="Button_Click">Sign In</Button>
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Margin="0,10,0,0" FontSize="{StaticResource BodyTextBlockFontSize}">New to RetailRythm ?</TextBlock>
                <HyperlinkButton Grid.Column="1" Margin="0,10,0,0" Foreground="#60CDFF" Background="Transparent" FontSize="{StaticResource BodyTextBlockFontSize}" Padding="3,0,0,0" Click="HyperlinkButton_Click">Create the account</HyperlinkButton>
            </Grid>

        </StackPanel>
        <Image Grid.Column="1" Source="/Assets/login_image.png"  Stretch="UniformToFill" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
    </Grid>
</Page>
