<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUi_Inventory_Management.Winui_Activities.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUi_Inventory_Management.Winui_Activities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:models="using:WinUi_Inventory_Management.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="30">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.50*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Dashboard" Grid.Column="0" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock x:Name="WelcomeText" Grid.Column="1"
           HorizontalAlignment="Left"
           VerticalAlignment="Center"
           Style="{StaticResource SubtitleTextBlockStyle}"
           Text="Welcome, User"/>
                <Border Width="60" Height="60" Grid.Column="2" VerticalAlignment="Center"
             BorderBrush="White"
             BorderThickness="1"

             CornerRadius="60"
             Margin="0,0,0,10"
             HorizontalAlignment="Center"
             >
                    <Image x:Name="ProfileImage"
       Source="/Assets/user_profile.png"
       Width="60"
       Height="60"
       Grid.Column="2"
       VerticalAlignment="Center"
       HorizontalAlignment="Center"/>
                </Border>

            </Grid>

            <Grid Grid.Row="1"  VerticalAlignment="Center" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <AutoSuggestBox 
                        x:Name="MyAutoSuggestBox" 
                        QueryIcon="Find" 
                        VerticalAlignment="Center" 
                        PlaceholderText="Search..." 
                        Width="1200"
                        TextChanged="MyAutoSuggestBox_TextChanged"/>
                    <TextBlock x:Name="SearchResultsTextBlock" FontSize="16"/>
                </StackPanel>


                <DropDownButton x:Name="MonthDropDown" Grid.Column="2" Content="Select Month" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="All Months" Click="MonthSelected" Tag="0"/>
                            <MenuFlyoutItem Text="January" Click="MonthSelected" Tag="1"/>
                            <MenuFlyoutItem Text="February" Click="MonthSelected" Tag="2"/>
                            <MenuFlyoutItem Text="March" Click="MonthSelected" Tag="3"/>
                            <MenuFlyoutItem Text="April" Click="MonthSelected" Tag="4"/>
                            <MenuFlyoutItem Text="May" Click="MonthSelected" Tag="5"/>
                            <MenuFlyoutItem Text="June" Click="MonthSelected" Tag="6"/>
                            <MenuFlyoutItem Text="July" Click="MonthSelected" Tag="7"/>
                            <MenuFlyoutItem Text="August" Click="MonthSelected" Tag="8"/>
                            <MenuFlyoutItem Text="September" Click="MonthSelected" Tag="9"/>
                            <MenuFlyoutItem Text="October" Click="MonthSelected" Tag="10"/>
                            <MenuFlyoutItem Text="November" Click="MonthSelected" Tag="11"/>
                            <MenuFlyoutItem Text="December" Click="MonthSelected" Tag="12"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>



            </Grid>

            <Grid Grid.Row="2"  VerticalAlignment="Center" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Border
                            Width="280"
                            Height="200"
                            Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
                            CornerRadius="12">


                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="10">

                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF71E;" FontSize="50"/>
                            <TextBlock 
                            Text="Total Order" Style="{StaticResource SubtitleTextBlockStyle}">

                            </TextBlock>
                            <TextBlock x:Name="P0"
                            Text="500" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center">

                            </TextBlock>
                        </StackPanel>

                    </Border>
                </Grid>
                <Grid Grid.Column="1"
        HorizontalAlignment="Left"
        VerticalAlignment="Center">
                    <Border
                Width="280"
                Height="200"
                Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
                CornerRadius="12">


                        <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">

                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF71E;" FontSize="50"/>
                            <TextBlock
                Text="Total Price" Style="{StaticResource SubtitleTextBlockStyle}">

                            </TextBlock>
                            <TextBlock x:Name="P1"
                Text="0" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center">

                            </TextBlock>
                        </StackPanel>

                    </Border>
                </Grid>

                <Grid Grid.Column="2"
        HorizontalAlignment="Left"
        VerticalAlignment="Center">
                    <Border
                Width="280"
                Height="200"
                Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
                CornerRadius="12">


                        <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">

                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF71E;" FontSize="50"/>
                            <TextBlock
                Text="Total Discount" Style="{StaticResource SubtitleTextBlockStyle}">

                            </TextBlock>
                            <TextBlock x:Name="P2"
                Text="0" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center">

                            </TextBlock>
                        </StackPanel>

                    </Border>
                </Grid>


            </Grid>

            <Grid Grid.Row="3"
                  Padding="0,50,0,0">
                
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- Header Row -->
                    <RowDefinition Height="*" />
                    <!-- List Data -->
                </Grid.RowDefinitions>
                
                
                <Grid Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="10" CornerRadius="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Order ID -->
                        <ColumnDefinition Width="*" />
                        <!-- Order Name -->
                        <ColumnDefinition Width="*" />
                        <!-- Created Date -->
                        <ColumnDefinition Width="*" />
                        <!-- Total Price -->
                        <ColumnDefinition Width="*" />
                        <!-- Action -->
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Order ID" FontWeight="Bold" />
                    <TextBlock Text="Order Name" Grid.Column="1" FontWeight="Bold" />
                    <TextBlock Text="Total Item Price" Grid.Column="2" FontWeight="Bold" />
                    <TextBlock Text="Total Discount" Grid.Column="3" FontWeight="Bold" />
                    <TextBlock Text="Total Order Price" Grid.Column="4" FontWeight="Bold" />
                    <TextBlock Text="Order Date" Grid.Column="5" FontWeight="Bold" />
                </Grid>

                <ListView  x:Name="MyOrdersListView" Grid.Row="1" ItemsSource="{x:Bind Orders}" Margin="0,5,0,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Order">
                            <Grid Padding="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Bind Id}" Grid.Column="0"/>
                                <TextBlock Text="{x:Bind OrderName}" Grid.Column="1" />
                                <TextBlock Text="{Binding TotalPrice}" Grid.Column="2" />
                                <TextBlock Text="{Binding TotalDiscount}" Grid.Column="3" />
                                <TextBlock Text="{Binding TotalPrice}" Grid.Column="4" />
                                <TextBlock Text="{Binding CreatedAt}" Grid.Column="5" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock Grid.Row="1" x:Name="NoOrdersText" Text="No Orders Currently" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource BodyTextBlockFontSize}"  FontWeight="SemiBold" Visibility="Collapsed" />
            </Grid>
        </Grid>
    </ScrollViewer>
    

</Page>
