<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUi_Inventory_Management.Winui_Activities.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUi_Inventory_Management.Winui_Activities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:models="using:WinUi_Inventory_Management.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="30">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.50*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Dashboard" Grid.Column="0" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock x:Name="WelcomeText" Grid.Column="1"
           HorizontalAlignment="Left"
           VerticalAlignment="Center"
           Style="{StaticResource SubtitleTextBlockStyle}"
           Text="Welcome, User"/>
                <Border Width="60" Height="60" Grid.Column="2" VerticalAlignment="Center"
             BorderBrush="White"
             BorderThickness="1"

             CornerRadius="60"
             Margin="0,0,0,10"
             HorizontalAlignment="Center"
             >
                    <Image x:Name="ProfileImage"
       Source="/Assets/user_profile.png"
       Width="60"
       Height="60"
       Grid.Column="2"
       VerticalAlignment="Center"
       HorizontalAlignment="Center"/>
                </Border>

            </Grid>

            <Grid Grid.Row="1"  VerticalAlignment="Center" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <AutoSuggestBox x:Name="MyAutoSuggestBox" QueryIcon="Find" VerticalAlignment="Center" PlaceholderText="Search..." Width="1200"/>
                    <TextBlock x:Name="SearchResultsTextBlock" FontSize="16"/>
                </StackPanel>


                <DropDownButton Grid.Column="2" Content="Email" VerticalAlignment="Top" HorizontalAlignment="Center" >
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="January"/>
                            <MenuFlyoutItem Text="Febuary"/>
                            <MenuFlyoutItem Text="March"/>
                            <MenuFlyoutItem Text="April"/>
                            <MenuFlyoutItem Text="May"/>
                            <MenuFlyoutItem Text="June"/>
                            <MenuFlyoutItem Text="July"/>
                            <MenuFlyoutItem Text="August"/>
                            <MenuFlyoutItem Text="September"/>
                            <MenuFlyoutItem Text="October"/>
                            <MenuFlyoutItem Text="November"/>
                            <MenuFlyoutItem Text="December"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <Grid Grid.Row="2"  VerticalAlignment="Center" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Border
                            Width="280"
                            Height="200"
                            Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
                            CornerRadius="12">


                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="10">

                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF71E;" FontSize="50"/>
                            <TextBlock
                            Text="Product" Style="{StaticResource SubtitleTextBlockStyle}">

                            </TextBlock>
                            <TextBlock
                            Text="500" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center">

                            </TextBlock>
                        </StackPanel>

                    </Border>
                </Grid>
                <Grid Grid.Column="1"
        HorizontalAlignment="Left"
        VerticalAlignment="Center">
                    <Border
                Width="280"
                Height="200"
                Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
                CornerRadius="12">


                        <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">

                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF71E;" FontSize="50"/>
                            <TextBlock
                Text="Product" Style="{StaticResource SubtitleTextBlockStyle}">

                            </TextBlock>
                            <TextBlock
                Text="500" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center">

                            </TextBlock>
                        </StackPanel>

                    </Border>
                </Grid>

                <Grid Grid.Column="2    "
        HorizontalAlignment="Left"
        VerticalAlignment="Center">
                    <Border
                Width="280"
                Height="200"
                Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
                CornerRadius="12">


                        <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">

                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF71E;" FontSize="50"/>
                            <TextBlock
                Text="Product" Style="{StaticResource SubtitleTextBlockStyle}">

                            </TextBlock>
                            <TextBlock
                Text="500" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center">

                            </TextBlock>
                        </StackPanel>

                    </Border>
                </Grid>


            </Grid>

            <Grid Grid.Row="3"
                  Padding="0,50,0,0">
                
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- Header Row -->
                    <RowDefinition Height="*" />
                    <!-- List Data -->
                </Grid.RowDefinitions>
                
                
                <Grid Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="10" CornerRadius="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Order ID -->
                        <ColumnDefinition Width="*" />
                        <!-- Order Name -->
                        <ColumnDefinition Width="*" />
                        <!-- Created Date -->
                        <ColumnDefinition Width="*" />
                        <!-- Total Price -->
                        <ColumnDefinition Width="*" />
                        <!-- Action -->
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Order ID" FontWeight="Bold" />
                    <TextBlock Text="Order Name" Grid.Column="1" FontWeight="Bold" />
                    <TextBlock Text="Total Item Price" Grid.Column="2" FontWeight="Bold" />
                    <TextBlock Text="Total Discount" Grid.Column="3" FontWeight="Bold" />
                    <TextBlock Text="Total Order Price" Grid.Column="4" FontWeight="Bold" />
                    <TextBlock Text="Order Date" Grid.Column="5" FontWeight="Bold" />
                </Grid>

                <ListView Grid.Row="1" ItemsSource="{x:Bind Orders}" Margin="0,5,0,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Order">
                            <Grid Padding="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Bind Id}" Grid.Column="0"/>
                                <TextBlock Text="{x:Bind OrderName}" Grid.Column="1" />
                                <TextBlock Text="{Binding TotalPrice}" Grid.Column="2" />
                                <TextBlock Text="{Binding TotalDiscount}" Grid.Column="3" />
                                <TextBlock Text="{Binding TotalPrice}" Grid.Column="4" />
                                <TextBlock Text="{Binding CreatedAt}" Grid.Column="5" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                
              <!--  <ListView Grid.Row="1" ItemsSource="{x:Bind Orders}" Margin="0,20,0,0">
                    
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Order">
                           <Border
                            Width="800"
                            Padding="20"
                            Margin="10"
                            CornerRadius="12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                                <Grid VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0" >
                        <Run>Invoice_</Run>
                        <Run Text="{x:Bind OrderName}"/>
                        <Run>_</Run>
                        <Run Text="{x:Bind CreatedAt}"/>
                        <Run>.pdf</Run>
                                    </TextBlock>
                                    <Button Grid.Column="2" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Click="DownloadInvoice">
                                        <FontIcon Glyph="&#xE896;" FontSize="18"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    
                </ListView>-->


            </Grid>
        </Grid>
    </ScrollViewer>
    

</Page>
